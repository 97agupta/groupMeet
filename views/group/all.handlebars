<h2>Welcome {{user}}</h2>

<a class="btn btn-default" href="groupCreator">Find a Group</a>

<div class="well">
    <h4>Current Groups</h4>
    <ul>
      {{#each groups}}
        {{#if active}}
            <li><a href="/groups/{{id}}/">{{name}} ({{user_ids.length}} members)</a></li>
        {{/if}}
      {{/each}}
    </ul>
</div>

<div class="well">
    <h4>Past Groups</h4>
    <ul>
      {{#each groups}}
        {{#unless active}}
            <li><a href="/groups/{{id}}">{{name}} ({{user_ids.length}} members)</a></li>
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="container" style="text-align:center">
    <a class="btn btn-default" href="/groups/all/">Home </a>
    <a class="btn btn-default" href="/user/{{id}}">Profile</a>
    <a class="btn btn-default" href="/">Log Out</a>
</div>
